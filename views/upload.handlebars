<div class="container mt-5">
    <div class="h1 justify-content-center">
        Upload files to Database
    </div>
    <hr>
    <form id="uploadTrans" method="post" enctype="multipart/form-data" name="uploadTrans">
        <label for="uploadTransFile">
            Select a Transition file to upload:
            <button class="btn btn-sm btn-link" id="transTemplate">Sample Template</button></label>
        <input type="file" class="form-control" id="uploadTransFile" name="uploadFile">  
    </form>
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4 d-flex justify-content-center">
            <button class="btn btn-info mt-2" id="uploadTransFileBtn">Upload Transition file</button>
        </div>
        <div class="col-4"></div>
    </div>
    <hr>
    
    <form id="uploadNewPeptide" method="post" enctype="multipart/form-data" name="uploadNewPeptide">
        <label for="uploadNewPeptideFile">
            Select a peptide file to upload:
            <button class="btn btn-sm btn-link" id="peptideTemplate">Sample Template</button></label>
        </label>
        <input type="file" class="form-control" id="uploadNewPeptideFile" name="uploadFile">
    </form>
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4 d-flex justify-content-center">
            <button class="btn btn-info mt-2" id="uploadNewPeptideFileBtn">Upload New Peptides</button>
        </div>
        <div class="col-4"></div>
    </div>
    <hr>
    
</div>

<div class="container">
    <div class="row">
        <div class="col-3">
            <button class="btn btn-link" id="uploadOptions">Show More Upload Options</button>
        </div>
        <div class="col-7"></div>
        <div class="col-2 d-flex justify-content-end align-items-center">
            <a href='/'>Back to Home</a>
        </div>
    </div>
    
</div>
    

<div class="container mt-5" id="cautiousItems" style="display:none;">
    <form id="uploadDB" method="post" enctype="multipart/form-data" name="uploadDB">
